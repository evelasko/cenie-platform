{
  "name": "cenie-platform",
  "version": "1.0.0",
  "private": true,
  "description": "CENIE Platform Monorepo - Unified institutional services",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build --filter=!@cenie/hub --filter=!@cenie/editorial --filter=!@cenie/academy --filter=!@cenie/agency && changeset publish",
    "sync-content": "npx sync-directory  ../docs/web-content contents",
    "deploy": "pnpm run deploy:all",
    "deploy:all": "pnpm run deploy:hub & pnpm run deploy:editorial & pnpm run deploy:academy & pnpm run deploy:agency",
    "deploy:hub": "cd apps/hub && vercel --prod",
    "deploy:editorial": "cd apps/editorial && vercel --prod",
    "deploy:academy": "cd apps/academy && vercel --prod",
    "deploy:agency": "cd apps/agency && vercel --prod",
    "deploy:preview": "pnpm run deploy:preview:all",
    "deploy:preview:all": "pnpm run deploy:preview:hub & pnpm run deploy:preview:editorial & pnpm run deploy:preview:academy & pnpm run deploy:preview:agency",
    "deploy:preview:hub": "cd apps/hub && vercel",
    "deploy:preview:editorial": "cd apps/editorial && vercel",
    "deploy:preview:academy": "cd apps/academy && vercel",
    "deploy:preview:agency": "cd apps/agency && vercel",
    "build:hub": "turbo build --filter=@cenie/hub",
    "build:editorial": "turbo build --filter=@cenie/editorial",
    "build:academy": "turbo build --filter=@cenie/academy",
    "build:agency": "turbo build --filter=@cenie/agency",
    "dev:hub": "turbo dev --filter=@cenie/hub",
    "dev:editorial": "turbo dev --filter=@cenie/editorial",
    "dev:academy": "turbo dev --filter=@cenie/academy",
    "dev:agency": "turbo dev --filter=@cenie/agency",
    "ci:check": "pnpm lint && pnpm type-check && pnpm test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.4.6",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}