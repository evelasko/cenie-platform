{
  "name": "cenie-platform",
  "version": "1.0.0",
  "private": true,
  "description": "CENIE Platform Monorepo - Unified institutional services",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build --filter=!@cenie/hub --filter=!@cenie/editorial --filter=!@cenie/academy --filter=!@cenie/agency && changeset publish",
    "sync:once": "unison cenie-content",
    "sync:watch": "./scripts/sync-watch.sh",
    "sync:once:hub": "unison cenie-content",
    "sync:once:academy": "unison academy-content",
    "sync:once:agency": "unison agency-content",
    "sync:once:editorial": "unison editorial-content",
    "sync:once:all": "concurrently \"pnpm run sync:once:hub\" \"pnpm run sync:once:academy\" \"pnpm run sync:once:agency\" \"pnpm run sync:once:editorial\"",
    "sync:watch:hub": "./scripts/sync-watch-single.sh cenie-content",
    "sync:watch:academy": "./scripts/sync-watch-single.sh academy-content",
    "sync:watch:agency": "./scripts/sync-watch-single.sh agency-content",
    "sync:watch:editorial": "./scripts/sync-watch-single.sh editorial-content",
    "sync:watch:all": "./scripts/sync-watch-all.sh",
    "build:hub": "turbo build --filter=@cenie/hub",
    "build:editorial": "turbo build --filter=@cenie/editorial",
    "build:academy": "turbo build --filter=@cenie/academy",
    "build:agency": "turbo build --filter=@cenie/agency",
    "dev:hub": "turbo dev --filter=@cenie/hub",
    "dev:editorial": "turbo dev --filter=@cenie/editorial",
    "dev:academy": "turbo dev --filter=@cenie/academy",
    "dev:agency": "turbo dev --filter=@cenie/agency",
    "ci:check": "pnpm lint && pnpm type-check && pnpm test"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.33.0",
    "eslint-config-next": "^15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
