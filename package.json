{
  "name": "cenie-platform",
  "version": "1.0.0",
  "private": true,
  "description": "CENIE Platform Monorepo - Unified institutional services",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "test": "turbo test",
    "test:e2e": "turbo test:e2e",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build --filter=!@cenie/hub --filter=!@cenie/editorial --filter=!@cenie/academy --filter=!@cenie/learn && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.4",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ]
}