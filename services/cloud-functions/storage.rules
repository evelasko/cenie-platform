rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Editorial app images: publicly readable, authenticated writes for editors
    // Write access is controlled server-side via Firebase Admin SDK (bypasses rules)
    // These read rules allow TwicPics CDN and browsers to fetch originals
    match /editorial/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Writes handled by Admin SDK (server-side only)
    }

    // Default: deny all access to other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
