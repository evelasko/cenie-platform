# The app name to differentiate this app
NEXT_PUBLIC_APP_NAME=the-app-name

# Hub App - Firebase Configuration
# Copy this file to .env.local and fill in your Hub-specific Firebase values

# Firebase Client Configuration (Hub App)
NEXT_PUBLIC_FIREBASE_API_KEY=your-hub-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-hub-firebase-auth-domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-hub-firebase-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-hub-firebase-storage-bucket
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-hub-firebase-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-hub-firebase-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-hub-firebase-measurement-id

# Firebase Admin SDK Configuration (Server-side)
# These are required for OAuth API endpoints and server-side auth
FIREBASE_PROJECT_ID=your-hub-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-service-account@your-hub-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-content\n-----END PRIVATE KEY-----"
