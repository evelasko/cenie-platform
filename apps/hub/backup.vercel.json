{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "cd ../.. && pnpm install && pnpm turbo build --filter=@cenie/hub",
  "devCommand": "cd ../.. && pnpm dev --filter=@cenie/hub",
  "installCommand": "echo 'Skipping install'",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- apps/hub/ packages/ services/",
  "projectSettings": {
    "framework": "nextjs",
    "devCommand": "pnpm dev",
    "buildCommand": "pnpm build",
    "outputDirectory": ".next"
  },
  "functions": {
    "app/api/**": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_NAME": "hub",
    "NEXT_PUBLIC_APP_URL": "https://cenie.org"
  }
}