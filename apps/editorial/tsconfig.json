{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@cenie/ui": ["../../packages/ui/src"],
      "@cenie/ui/*": ["../../packages/ui/src/*"],
      "@cenie/firebase": ["../../packages/firebase/src"],
      "@cenie/firebase/*": ["../../packages/firebase/src/*"],
      "@cenie/auth-client": ["../../packages/auth-client/src"],
      "@cenie/auth-client/*": ["../../packages/auth-client/src/*"],
      "@cenie/supabase": ["../../packages/supabase/src"],
      "@cenie/supabase/*": ["../../packages/supabase/src/*"],
      "@cenie/errors": ["../../packages/errors/src"],
      "@cenie/errors/*": ["../../packages/errors/src/*"],
      "@cenie/email": ["../../packages/email/src"],
      "@cenie/email/*": ["../../packages/email/src/*"],
      "@cenie/sentry": ["../../packages/sentry/src"],
      "@cenie/sentry/*": ["../../packages/sentry/src/*"],
      "@cenie/auth-server": ["../../packages/auth-server/src"],
      "@cenie/auth-server/*": ["../../packages/auth-server/src/*"],
      "@cenie/oauth-handlers": ["../../packages/oauth-handlers/src"],
      "@cenie/oauth-handlers/*": ["../../packages/oauth-handlers/src/*"],
      "@cenie/auth-utils": ["../../packages/auth-utils/src"],
      "@cenie/auth-utils/*": ["../../packages/auth-utils/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "scripts"]
}
