{
  "name": "@cenie/errors",
  "version": "0.0.1",
  "private": true,
  "description": "CENIE Platform Centralized Error Handling Package",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./next": "./src/handlers/next-handler.ts",
    "./express": "./src/handlers/express-handler.ts",
    "./react": "./src/handlers/react-handler.tsx"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 10",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf .turbo node_modules dist coverage"
  },
  "dependencies": {
    "@cenie/logger": "workspace:*",
    "error-stack-parser": "^2.1.4"
  },
  "peerDependencies": {
    "express": "^4.18.0",
    "next": "^14.0.0 || ^15.0.0 || ^16.1.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "eslint": "^9.38.0",
    "react": "^19.2.4",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  }
}
