{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "noEmit": true,
    "importHelpers": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@cenie/ui": ["./packages/ui/src"],
      "@cenie/ui/*": ["./packages/ui/src/*"],
      "@cenie/firebase": ["./packages/firebase/src"],
      "@cenie/firebase/*": ["./packages/firebase/src/*"],
      "@cenie/auth-client": ["./packages/auth-client/src"],
      "@cenie/auth-client/*": ["./packages/auth-client/src/*"],
      "@cenie/supabase": ["./packages/supabase/src"],
      "@cenie/supabase/*": ["./packages/supabase/src/*"],
      "@cenie/errors": ["./packages/errors/src"],
      "@cenie/errors/*": ["./packages/errors/src/*"],
      "@cenie/email": ["./packages/email/src"],
      "@cenie/email/*": ["./packages/email/src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".turbo",
    "coverage",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
